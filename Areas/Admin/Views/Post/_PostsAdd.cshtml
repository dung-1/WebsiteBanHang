@using WebsiteBanHang.Areas.Admin.Common
@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLteAdmin.cshtml";
}
@model WebsiteBanHang.Areas.Admin.Models.PostsModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1>Thêm thông tin bài viết</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form id="createFormPost" class="form-horizontal">
                @*nav-tabs*@
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" role="tab" href="#general">Thông tin bài viết</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" role="tab" href="#general-detail">Thông tin chi tiết</a>
                    </li>
                </ul>
                @*end nav-tabs*@
                @*tab-content*@
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="general">
                        <div class="row mt-2">
                            <div class="col-md">
                                <label asp-for="Title" class="col-md control-label"></label>
                                <div class="col-md">
                                    <textarea asp-for="Title" class="form-control" name="Title" id="Title"></textarea>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md">
                                <label asp-for="Content" class="col-md control-label"></label>
                                <div class="col-md">
                                    <textarea asp-for="Content" class="form-control" name="Content" rows="10" id="Content"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="general-detail">
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <label asp-for="CategoryId" class="col-md control-label"></label>
                                <div class="col-md">
                                    <select asp-items="@ViewBag.Categories" name="CategoryId" class="form-control" required>
                                        <option selected value="">--Chọn danh mục--</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ExcerptImage" class="col-md control-label"></label>
                                <div class="col-md">
                                    <input asp-for="ExcerptImage" id="ExcerptImage" type="file" class="form-control" name="imageFile" />
                                    <span asp-validation-for="ExcerptImage" class="text-danger"></span>
                                </div>
                            </div>
                           
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-4">
                                <label asp-for="FromDate" class="col-md control-label"></label>
                                <div class="col-md">
                                    <input asp-for="FromDate" name="FromDate" id="FromDate"  class="form-control" value="@DateTime.Now.Date" />
                                    <span asp-validation-for="FromDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ToDate" class="col-md control-label"></label>
                                <div class="col-md">
                                    <input asp-for="ToDate" class="form-control" name="ToDate" id="ToDate" value="@DateTime.Now.Date.AddMonths(1)" />
                                    <span asp-validation-for="ToDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Status" class="col-md control-label"></label>
                                <div class="col-md">
                                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusActivity>()" name="Status" id="Status" class="form-control" required>
                                        <option selected value="">--Chọn trạng thái--</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-sm">
                        <div class="float-sm-right">
                            <button type="button" onclick="validateAndSubmitPost()" class="btn btn-success save-button"><i class="fas fa-save"></i>Lưu thông tin</button>
                            <button type="reset" class="btn btn-primary"><i class="fas fa-sync"></i>Làm mới</button>
                        </div>
                    </div>
                </div>
            </form>
             <script>
                 CKEDITOR.replace('Content');
             </script>
        </div>
    </section>

</div>
