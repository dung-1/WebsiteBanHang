@{
    ViewData["Title"] = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<WebsiteBanHang.Areas.Admin.Models.>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title fs-3"> Quản Lý Hãng</h3>
        </div>
        <div class="row">
            <div class="row grid-margin ">

                <div class="col-lg-6">
                    <button type="button" class="btn btn-info create-brand">
                        <i class="fa-solid fa-plus"></i> Thêm hãng sản phẩm
                    </button>
                </div>
                <div class="col-lg-6">
                    <form class="d-flex " role="search" asp-area="Admin" asp-controller="Order" asp-action="SearchBrands">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="searchName" id="searchName" value="@ViewBag.SearchName">
                        <button class="btn btn-success" type="submit">Search</button>
                    </form>
                </div>

                <div class="modal fade" id="Create_Order" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="edit-Order-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th> Mã Hóa Đơn </th>
                                    <th> Tên Sản Phẩm </th>
                                    <th> Số Lượng</th>
                                    <th> Đơn Gía </th>
                                    <th> Chỉnh Sửa </th>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <th> Xóa </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td width="20%">
                                            @item.OrderId
                                        </td>
                                        <td width="20%">
                                            @item.ProductId

                                        </td>
                                        <td width="20%">
                                            @item.soLuong

                                        </td>
                                        <td width="20%">
                                            @item.gia
                                        </td>

                                        <td>
                                            <a data-id="@item.ID" class="btn btn-sm btn-warning edit-OderDetai"><i class="bi bi-pencil-square"></i><i class="fa-solid fa-pen-to-square"></i> Chỉnh Sửa</a>&nbsp;
                                        </td>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <td width="10%">

                                                <a class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i><i class="fa-solid fa-trash-can"></i> Xóa </a>

                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
            <div class="container-fluid d-flex justify-content-between">
                <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © bootstrapdash.com 2021</span>
                <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin template</a> from Bootstrapdash.com</span>
            </div>
        </footer>
        <!-- partial -->
    </div>
</div>