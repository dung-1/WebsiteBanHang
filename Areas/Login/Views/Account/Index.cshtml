@using System.Security.Claims
@using WebsiteBanHang.Models
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using System.Globalization;
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Login/Shared/_LayoutLogin.cshtml";
}
<style>


    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    .password-container {
        position: relative;
    }

    .password-input-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
    }

        .password-toggle:hover {
            color: #333;
        }

    .submit_login {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .submit_login:hover {
            background-color: #0056b3;
        }
</style>
<div class="form-body">
    <a href="javascript:window.history.back();" style="color:black;"><i class="fa-solid fa-left-long"></i> @language.GetKey("Back")</a>
    <h3 class="title fw-bold text-uppercase ">@language.GetKey("Register")</h3>
    <div class="social-login">
        <ul>
            <li class="google"><a href="#">Google</a></li>
            <li class="fb"><a href="#">Facebook</a></li>
        </ul>
    </div><!-- SOCIAL LOGIN -->

    <div class="_or">@language.GetKey("Or")</div>
    <form  method="post" onsubmit="return validateForm()" class="the-form">

        <label for="inputEmail" class="form-label ">Email</label>
        <input type="email" id="inputEmail" name="email" placeholder="Nhập Email Của Bạn">
        <span id="emailError" class="text-danger"></span>

        <label for="inputName" class="form-label ">@language.GetKey("Name")</label>
        <input type="text" id="inputName" name="fullname" placeholder="Nhập Tên Của Bạn">
        <span id="fullnameError" class="text-danger"></span>


        <label for="inputPhoneNumber" class="form-label ">@language.GetKey("Phone number")</label>
        <input type="number" id="inputPhoneNumber" name="phoneNumber" placeholder="Nhập Số Điện Thoại Của Bạn">
        <span id="phoneNumberError" class="text-danger"></span>


        <label for="inputAddress" class="form-label ">@language.GetKey("Address")</label>
        <input type="text" id="inputAddress" name="address" placeholder="Nhập Địa Chỉ Của Bạn">
        <span id="addressError" class="text-danger"></span>

        <div class="form-group password-container">
            <label for="password">@language.GetKey("Password")</label>
            <div class="password-input-container">
                <input type="password" id="password" name="password" class="form-control" placeholder="Nhập Mật Khẩu Của Bạn" />
                <span class="password-toggle" onclick="togglePassword()">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
            </div>
                <span id="passwordError" class="text-danger"></span>
        </div>


        <input type="submit" value="@language.GetKey("Register")">
    </form>


</div><!-- FORM BODY-->

<div class="form-footer">
    <div>
        <span class="text-center mt-4">@language.GetKey("Already have an account?") <a asp-area="Login" asp-controller="" asp-action="Login">@language.GetKey("Log in")</a></span>
    </div>
</div><!-- FORM FOOTER -->

