@using System.Security.Claims
@using WebsiteBanHang.Models
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using System.Globalization;
@inject LanguageService language
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Login/Shared/_LayoutLogin.cshtml";
}
@model WebsiteBanHang.Areas.Admin.Models.UserModel

<style>


    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

    .password-container {
        position: relative;
    }

    .password-input-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
    }

        .password-toggle:hover {
            color: #333;
        }

    .submit_login {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .submit_login:hover {
            background-color: #0056b3;
        }
</style>
<div class="form-body">
    <a href="javascript:window.history.back();" style="color:black;"><i class="fa-solid fa-left-long"></i> @language.GetKey("Back")</a>
    <h3 class="title text-uppercase fw-bold">@language.GetKey("Log In")</h3>
    <div class="social-login">
        <ul>
            <li class="google"><a href="#">Google</a></li>
            <li class="fb"><a href="#">Facebook</a></li>
        </ul>
    </div><!-- SOCIAL LOGIN -->

    <div class="_or">@language.GetKey("Or")</div>

    <form id="LoginForm" method="post" class="the-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" class="form-control"  asp-for="Email" placeholder="Nhập Email Của Bạn">
        </div>
        <div class="form-group password-container">
            <label for="password">@language.GetKey("Password")</label>
            <div class="password-input-container">
                <input asp-for="MatKhau" type="password" id="password" class="form-control" placeholder="Nhập Mật Khẩu Của Bạn" />
                <span class="password-toggle" onclick="togglePassword()">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </span>
            </div>
        </div>
        <input type="button" onclick="buttonLoginForm()" class="btn submit_login" value="@language.GetKey("Log In")">
    </form>

    <a asp-area="Login" asp-controller="Account" asp-action="ForgotPassword" class="text-danger">@language.GetKey("Forgot password ?")</a>

</div><!-- FORM BODY-->

<div class="form-footer">
    <div>
        <span>@language.GetKey("Do not have an account?")</span> <a asp-area="Login" asp-controller="Account" asp-action="Index">@language.GetKey("Register")</a>
    </div>
</div><!-- FORM FOOTER -->
