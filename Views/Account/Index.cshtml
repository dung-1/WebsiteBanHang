@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link href="~/css/bootstrap.css" type="text/css" rel="stylesheet">
    <script src="~/js/bootstrap.bundle.js" type="text/javascript"></script>

    <!-- Bootstrap Icons v1.5.0 -->
    <link href="~/css/bootstrap-icons.css" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style-with-prefix.css">
    <style>
        .srouce {
            text-align: center;
            color: #ffffff;
            padding: 10px;
        }
    </style>
</head>
<body>

    <div class="main-container">
        <div class="form-container">
            <div class="form-body">
                <h3 class="title fw-bold text-uppercase ">Đăng Ký</h3>
                <form asp-controller="Account" asp-action="Index" method="post" onsubmit="return validateForm()" class="the-form">

                    <label for="inputEmail" class="form-label ">Email</label>
                    <input type="email" id="inputEmail" name="email" placeholder="Nhập Email Của Bạn">
                    <span id="emailError" class="text-danger"></span>

                    <label for="inputName" class="form-label ">Họ tên</label>
                    <input type="text" id="inputName" name="fullname" placeholder="Nhập Tên Của Bạn">
                    <span id="fullnameError" class="text-danger"></span>


                    <label for="inputPhoneNumber" class="form-label ">Số điện thoại</label>
                    <input type="number" id="inputPhoneNumber" name="phoneNumber" placeholder="Nhập Số Điện Thoại Của Bạn">
                    <span id="phoneNumberError" class="text-danger"></span>


                    <label for="inputAddress" class="form-label ">Địa chỉ</label>
                    <input type="text" id="inputAddress" name="address" placeholder="Nhập Địa Chỉ Của Bạn">
                    <span id="addressError" class="text-danger"></span>


                    <label for="inputPassword" class="form-label ">Mật khẩu</label>
                    <input type="password" id="inputPassword" name="password" placeholder="Nhập password Của Bạn">
                    <span id="passwordError" class="text-danger"></span>

                    <input type="submit" value="Đăng Ký">
                </form>


            </div><!-- FORM BODY-->

            <div class="form-footer">
                <div>
                    <span class="text-center mt-4">Đã có tài khoản? <a asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a></span>
                </div>
            </div><!-- FORM FOOTER -->

        </div><!-- FORM CONTAINER -->
    </div>
    <script src="~/js/jquery-3.3.1.min.js"></script>

    <script src=" /js/validate.js"></script>
</body>
</html>


