@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model WebsiteBanHang.Areas.Admin.Models.UserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link href="~/css/bootstrap.css" type="text/css" rel="stylesheet">
    <script src="~/js/bootstrap.bundle.js" type="text/javascript"></script>

    <!-- Bootstrap Icons v1.5.0 -->
    <link href="~/css/bootstrap-icons.css" type="text/css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Muli:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/style-with-prefix.css">
    <style>
        .srouce {
            text-align: center;
            color: #ffffff;
            padding: 10px;
        }
    </style>
</head>
<body>

    <div class="main-container">
        <div class="form-container">


            <div class="form-body">
                <h3 class="title text-uppercase fw-bold">Đăng Nhập</h3>
                <div class="social-login">
                    <ul>
                        <li class="google"><a href="#">Google</a></li>
                        <li class="fb"><a href="#">Facebook</a></li>
                    </ul>
                </div><!-- SOCIAL LOGIN -->

                <div class="_or">Hoặc</div>

                <form asp-controller="Account" asp-action="Login" method="post" class="the-form">

                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" asp-for="Email" placeholder="Nhập Email Của Bạn">

                    <label for="password">Password</label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập Mật Khẩu Của Bạn" />

                    <input type="submit" value="Đăng Nhập">

                </form>

            </div><!-- FORM BODY-->

            <div class="form-footer">
                <div>
                    <span>Bạn chưa có tài khoản?</span> <a asp-area="" asp-controller="Account" asp-action="Index">Đăng Ký</a>
                </div>
            </div><!-- FORM FOOTER -->

        </div><!-- FORM CONTAINER -->
    </div>
</body>
</html>


