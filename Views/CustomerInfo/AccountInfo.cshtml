@using System.Security.Claims
<section class="section-pagetop bg-light">
    <div class="container">
        <h2 class="title-page">Tài khoản</h2>
    </div> <!-- container.// -->
</section> <!-- section-pagetop.// -->

<section class="section-content padding-y">
    <div class="container">
        <div class="row">

            <aside class="col-md-3 mb-md-0 mb-3">
                <nav class="list-group">
                    <a class="list-group-item active" asp-controller="CustomerInfo" asp-action="AccountInfo"> Tài khoản </a>
                    <a class="list-group-item" asp-controller="CustomerInfo" asp-action="Changepassword"> Đổi mật khẩu </a>
                    <a class="list-group-item" asp-controller="CustomerInfo" asp-action="Setting"> Thiết đặt </a>
                </nav>
            </aside> <!-- col.// -->
            <main class="col-md-9">
                <article class="card">
                    <div class="card-body">
                        <div>
                            <h5 style="color:black;font-size:18px;font-weight:bold;" class="text-uppercase">Họ Tên: @string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.Email).Select(c => c.Value))</h5>
                            <p>Email: @string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value))</p>
                        </div>
                        <hr>
                        <div>
                            <p class="d-block lh-lg">
                                Địa chỉ: @string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.StreetAddress).Select(c => c.Value))
                            </p>
                        </div>
                        <div>
                            <p class="d-block lh-lg">
                                Số điện thoại: @string.Join(", ", User.Claims.Where(c => c.Type == ClaimTypes.MobilePhone).Select(c => c.Value))
                            </p>
                        </div>
                    </div> <!-- card-body.// -->
                </article>
            </main> <!-- col.// -->

        </div> <!-- row.// -->
    </div> <!-- container.// -->
</section> <!-- section-content.// -->