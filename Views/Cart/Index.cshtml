@model List<WebsiteBanHang.Models.CartItemModel>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="d-flex justify-content-center"> Giỏ Hàng</h2>


@if (Model.Count > 0)
{
    double total = 0;
    int stt = 1;
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>

                            <thead>
                                <tr>
                                    <th class="shoping__product"> Sản Phẩm</th>
                                    <th> Gía Sản Phẩm</th>
                                    <th>Số Lượng</th>
                                    <th>Thành Tiền</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            @foreach (var cartitem in Model)
                            {
                                var thanhtien = Convert.ToDouble(cartitem.Soluong * cartitem.Product.Gia);
                                total += thanhtien;
                                <tbody>
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="/@cartitem.Product.Image" style="width:200px;height:180px">
                                            <h5>@cartitem.Product.TenSanPham</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @cartitem.Product.Gia
                                        </td>
                                        <td class="shoping__cart__quantity"><input asp-for="@cartitem.Soluong" id="@($"quantity-{cartitem.Product.Id}")" />  </td>
                                        <td class="shoping__cart__total">
                                            @(thanhtien)
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a  class="btn btn-success "
                                               asp-route="updatecart" asp-route-id="@cartitem.Product.Id">
                                                <i class="fa-solid fa-square-pen"></i>
                                                Cập nhật
                                            </a>
                                            <a asp-controller="Cart" asp-action="RemoveCart" asp-route-productid="@cartitem.Product.Id"
                                               class="btn btn-danger"> <i class="fa-solid fa-delete-left"></i> Xóa</a>
                                        </td>   
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Discount Codes</h5>
                            <form action="#">
                                <input type="text" placeholder="Enter your coupon code">
                                <button type="submit" class="site-btn">APPLY COUPON</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Cart Total</h5>
                        <ul>
                            <li>Total <span>@(total.ToString("n0"))</span></li>
                        </ul>
                        <a asp-controller="Cart" asp-action="CheckOut" class="primary-btn">PROCEED TO CHECKOUT</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
